pipeline {

    agent any


    stages {
       

        stage("Build") {
            steps {
                bat "mvn -version"
                bat "mvn clean package"
                // sh "mvn clean package -DskipTests" pour une machine linux
		
            }
	    post {
            success {
               jacoco()
               junit '**/target/surefire-reports/TEST-*.xml'
            }
           }
        }
        
        stage("Sonar") {
            steps {
                bat "mvn sonar:sonar"
            }
        }
        
        stage("DEPLOY") {
            steps {
                //bat "mvn deploy -DskipTests"
                bat "mvn clean package deploy:deploy-file -DgroupId=tn.esprit -DartifactId=springBootProj -Dversion=1.8 -DgeneratePom=true -Dpackaging=jar -DrepositoryId=deploymentRepo -Durl=http://localhost:8081/repository/maven-releases/ -Dfile=target/springBootProj-1.0.jar"

            }
        }
    
   stage("Email"){
                 steps{
                 mail bcc: '', body: '''bonjour , 
                un build et un déploiement a été effectué , vérifiez
                Cordialement , 
                Chourabi''', 
                cc: '', from: '', replyTo: '', subject: 'build et déploiement', to: 'mohamedachraf.chourabi@esprit.tn'
             
                 }
                 } 
                 }
    post {
        always {
            cleanWs()
        }
    }
    
}
