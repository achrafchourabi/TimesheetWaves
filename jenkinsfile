pipeline {

    agent any


    stages {
       

        stage("Build") {
            steps {
                bat "mvn -version"
                bat "mvn clean package"
                // sh "mvn clean package -DskipTests" pour une machine linux
            }
        }
        
        stage("Sonar") {
            steps {
                bat "mvn sonar:sonar"
            }
        }
        
        stage("DEPLOY") {
            steps {
                //bat "mvn deploy -DskipTests"
                bat "mvn clean package deploy:deploy-file -DgroupId=tn.esprit -DartifactId=springBootProj -Dversion=1.4 -DgeneratePom=true -Dpackaging=jar -DrepositoryId=deploymentRepo -Durl=http://localhost:8081/repository/maven-releases/ -Dfile=target/springBootProj-1.0.jar"

            }
        }
    }
   
    post {
        always {
            cleanWs()
        }
    }
    
}
